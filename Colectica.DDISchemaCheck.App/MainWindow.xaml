<Window x:Class="Colectica.DDISchemaCheck.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DDI Schema Checker" Height="350" Width="525" FontSize="22" HorizontalAlignment="Left">
    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <TextBlock TextWrapping="Wrap" Text="This tool performs structural and spelling checks on the DDI Schema. Select the instance.xsd to create a report." FontSize="22"/>
            <Button Content="Select DDI instance.xsd file" Margin="10" FontSize="22" Click="Button_Click" />
        </StackPanel>
        

    </Grid>
</Window>
